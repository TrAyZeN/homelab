server {
    listen 443 ssl http2;

    server_name kiwix.home;

    ssl_certificate     /etc/pki/certs/kiwix.home.crt;
    ssl_certificate_key /etc/pki/certs/kiwix.home.key;
    ssl_protocols TLSv1.3;

    # HSTS
    add_header Strict-Transport-Security "max-age=31536000" always;

    # TODO: change
    resolver 8.8.8.8;

    location / {
        proxy_pass http://localhost:7002;
    }
}
